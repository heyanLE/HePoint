<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/float_window_button"
    android:layout_gravity="center"
    android:gravity="center"
    android:paddingLeft="10dp"
    android:paddingStart="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout"
        android:background="@drawable/float_window_button"
        android:layout_toLeftOf="@+id/item_list_button"
        android:layout_toStartOf="@+id/item_list_button">

        <TextView
            android:id="@+id/item_list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/Clean"
            android:textColor="#fff"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/item_list_sub_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="清空玩家物品栏的物品。"
            android:textColor="#fff"
            android:textSize="15sp"
            android:layout_marginBottom="10dp"/>


    </LinearLayout>

    <ImageButton
        android:id="@+id/item_list_button"
        android:paddingStart="40dp"
        android:paddingLeft="40dp"
        android:paddingEnd="40dp"
        android:paddingRight="40dp"
        android:foregroundGravity="center"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:src="@mipmap/menu"
        android:scaleType="fitCenter"
        android:textColor="#fff"
        android:textSize="20sp"
        android:gravity="center"
        android:background="@drawable/float_window_button"
        android:layout_alignBottom="@+id/linearLayout" />




</RelativeLayout>